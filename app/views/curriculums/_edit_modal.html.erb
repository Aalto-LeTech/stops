<%# Modal dialog %>
<div class="modal hide fade" id="edit-modal">
  <div id="edit-modal-strings" class="hide"
    data-error-heading="<%= t '.error_heading' %>"
    data-change-failed="<%= t '.change_failed' %>"
    data-box-empty="<%= t '.box_empty' %>">
  </div>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= t '.heading' %></h3>
  </div>
  <div class="modal-body">
    <div id="edit-modal-error-box" class="info error-info long-info hide">
    </div>
    <div id="edit-modal-loading" class="hide">
      <%= image_tag 'progress.gif' %>
      <div><%= t '.saving' %>...</div>
    </div>
    <div class="row-fluid">
      <%= form_for @curriculum, :remote => true, :html => { :id => 'edit-modal-form' } do |f| %>
        <p>
          <%= f.label :name, t('.name_label') %>
          <%= f.text_field :name, :class => 'span11', :size => 40 %>
        </p>
        <p>
          <label class="checkbox inline">
            <%= f.check_box :published %> <%= t('.published_label') %>
          </label>
        </p>
        <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn"><%= t 'Cancel' %></button>
    <button type="button" id="edit-modal-form-submit" class="btn btn-primary"><%= t 'Save' %></button>
  </div>
</div>
