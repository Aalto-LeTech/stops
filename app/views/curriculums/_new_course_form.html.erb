<div id="metadata" style="display: none" 
  data-course-box-error-message="<%= t '.create_course_error_failed_to_load_course_box' %>"
  data-new-course-save-failed-message="<%= t '.create_course_save_failed' %>">
</div>

<div id="new-course-box-loading-icon" class="hide">
  <div class="center-container">
    <%= image_tag "progress.gif" %>
    <span id="new-course-box-saving-message" class="hide">
      <%= t '.create_course_saving' %>
    </span>
  </div>
</div>

<div id="new-course-box-error-message" class="hide">
  <div class="course-error-info">
    <div class="course-error-image">
      <%= image_tag "glyphicons_078_warning_sign_white.png" %>
    </div> 
    <strong><%= t '.create_course_error_heading' %></strong>
    <div class="course-error-contents">
    </div>
  </div>
</div>

<div id="new-course-box" class="new-skill-box hide">
  <a class="new-course-close" href="#">&times;</a>
  <div class="new-course-box-header">
    <h4><%= t '.create_course_heading' %></h4>
    <p><%= t '.create_course_help_text' %></p>
  </div>
  <div id="new-course-box-content"></div>
  <div id="new-course-box-validation-message" class="hide">
    <%= t '.create_course_validation_error' %>
  </div>
  <div class="new-course-box-footer">
    <a class="button-base cancel-button"><%= t :Cancel %></a>
    <a class="button-base save-button"><%= t :Save %></a>
  </div>
</div>