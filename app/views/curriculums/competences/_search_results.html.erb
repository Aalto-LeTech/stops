<table class="search-results">
  <% @courses.each do |course| %>
    <% @course = course %>
    <tr class="skill-search-result">
      <th class="skill-course-detail" colspan="2"><%= @course.code %> <%= @course.course_description_with_locale.name %></th>
    </tr>

    <% @course.skill_descriptions.each do |skill_desc| %>
      <tr>
        <td><%= skill_desc.description %></td> 
        <td class="skill-search-button-cell">
          <button class="button-base button-small skill-add-prereq-button" 
            data-skill-id="<%= skill_desc.skill_id %>"
            data-add-text="<%= t :competence_skill_add_prereq_button %>"
            data-loading-text="<%= t :competence_skill_add_prereq_button_loading %>"
            data-remove-text="<%= t :competence_skill_add_prereq_button_loaded %>">
          <%= t :competence_skill_add_prereq_button %></button>
        </td>
      </tr>
    <% end %>
  <% end %>  
</table>
