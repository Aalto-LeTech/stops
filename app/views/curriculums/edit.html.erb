<h1>Edit <%=h @curriculum.year %></h1>

<% form_for(@curriculum, :html => { :multipart => true }) do |f| %>
  
  <table>
    <tr>
      <td><%=t :curriculum_prereqs_csv %></td>
      <td><%= file_field_tag :prereqs_csv %></td>
      <td></td>
    </tr>
    
    <tr>
      <td><%=t :curriculum_profiles_csv %></td>
      <td><%= file_field_tag :profiles_csv %></td>
      <td></td>
    </tr>
  </table>
  
  <p><%= f.submit t(:Upload) %></p>
<% end %>


<p><%= link_to 'Back', @curriculum %></p>