<h2><%=t :login_heading %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <table>
    <tr>
      <td><%= f.label :login, t('devise.login') %></td>
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <td><%= f.label :password, t('devise.password') %></td>
      <td><%= f.password_field :password %></td>
    </tr>
  </table>
  
  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.remember_me') %></p>
  <% end -%>

  <p><%= f.submit t(:login_button) %></p>
<% end %>



<%= render :partial => "devise/shared/links" %>