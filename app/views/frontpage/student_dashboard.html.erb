<% content_for :javascript do %>
  <%= javascript_include_tag 'dashboard' %>
<% end %>


<h1><%= t('.heading') %></h1>

<p>
  <%= t('.welcome', name: @user.name) %>
</p>


<% if false && @study_plan %>

  <%= render :partial => 'schedule' %>

  <div class="row-fluid">
    <div class="span4">
      <%= render :partial => 'competences' %>
    </div>
    <div class="span4">
      <%= render :partial => 'courses' %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span4">
    </div>
    <div class="span4">
      <%= render :partial => 'curriculums' %>
    </div>
  </div>

<% end %>

<div id="plan" data-studyplan-path="<%= plan_path(@study_plan.id) %>">
  <!-- ko foreach: courses -->
    <div class="course">
      <span data-bind="text: course_code"></span>
      <span data-bind="text: name"></span>
    </div>
  <!-- /ko -->
</div>
