<!-- bootstrap-based navbar -->

<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="<%= frontpage_path %>">
      <div class="logo">
        <span class="o4">O<sup>4</sup></span> 
        <span class="program-name"><%=t :program_name%></span>
      </div>
    </a>
    <ul class="nav">
      <%= nav_link_to t(:frontpageTab), frontpage_path %>
      <%= nav_link_to t(:curriculumsTab), curriculums_path %>
      <% if logged_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="" href="#">
            <%= t :myPlanDropdown %>
            <b class="caret"></b>
          </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li><%= link_to t(:myPlanTabCurriculum), studyplan_curriculum_path %></li>
              <li><%= link_to t(:myPlanTabCompetences), studyplan_competences_path %></li>
              <% if false # Temporarily disabled %>
                <li><%= link_to t(:myPlanTabAllCourses), studyplan_courses_path %></li>
              <% end %>
              <!--li><%= link_to t(:myPlanTabMyCourses),  studyplan_courses_path %></li-->
              <% if false # Temporarily disabled %>
                <li><%= link_to t(:myPlanTabSchedule), studyplan_schedule_path %></li>
              <% end %>
              <!--li><%= link_to t(:myPlanTabRecord), studyplan_record_path %></li-->
            </ul>
        </li>
      <% end %>
    </ul>

    <ul class="nav pull-right">
      <li>
        <%= link_to 'FI', url_for(:locale => 'fi'), :class => 'lang-link' %>
        <%= link_to 'EN', url_for(:locale => 'en'), :class => 'lang-link' %>
      </li>

      <li class="divider-vertical"></li>

      <% if logged_in? %>
        <li>
          <p class="navbar-text">
            <i class="icon-user"></i>
            <%= current_user.name %>
          </p>
        </li>
        <!--li><%= link_to 'My preferences', preferences_path %></li-->
        <li><%= link_to 'Logout', logout_path %></li>
      <% else %>
        <li><%= link_to 'Login', login_url %></li>
      <% end %>
    </ul>
  </div>
</div>


<div class="clear"></div>

