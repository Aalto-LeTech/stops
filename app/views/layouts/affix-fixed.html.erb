<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<% content_for(:corestylesheets) do -%>
  <%= stylesheet_link_tag "layouts/browser", :media => 'all' %>
<% end -%>
<%= render partial: 'layouts/core/head' %>

<body>
  <%= render partial: 'layouts/navs/top', locals: {fixed_nav: false}  %>

<div class="container full-height">
  <div class="row full-height">
    <div class="span3 sidebar">
      <div class="span3 leftnav lower" data-spy="affix" data-offset-top="120">
        <div class="leftnav-content">
          <%= content_for(:leftnav) %>
        </div>
      </div>
    </div>

    <div class="span9">
      <%= render partial: 'layouts/core/messages' %>
      <%= yield %>
    </div>
  </div>
</div>  

<div class="affix-spacer">
</div>

<%= javascript_include_tag 'core/core' %>
<%= yield(:javascripts) %>

</body>
</html>
