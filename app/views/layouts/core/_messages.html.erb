<!-- Flash messages -->
<% if flash[:notice] -%>
  <p class="alert alert-info"><%= flash[:notice]  %></p>
<% end -%>
<% if flash[:alert] -%>
  <p class="alert"><%= flash[:alert]  %></p>
<% end -%>
<% if flash[:warning] -%>
  <p class="alert"><%= flash[:notice]  %><%= flash[:warning] %></p>
<% end -%>
<% if flash[:success] -%>
  <p class="alert alert-success"><%= flash[:success] %></p>
<% end -%>
<% if flash[:error] or flash[:failure] -%>
  <p class="alert alert-error"><%= flash[:alert] %><%= flash[:error] %><%= flash[:failure] %></p>
<% end -%>
