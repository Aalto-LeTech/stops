<% content_for(:stylesheets) do %>
  <%= stylesheet_link_tag "views/plans/competences/index", :media => 'all' %>
<% end %>


<% content_for :javascripts do %>
  <script type="text/javascript">
    <%= render "plans/competences/i18n_strings.js" %>
  </script>
<% end %>


<% content_for :theleft do %>

  <h1><%= link_to t('.competences'), studyplan_competences_path %></h1>
  <ul>
    <% @curriculum.competences.each do |competence| %>
      <li class="<%= @user.study_plan.has_competence?( competence ) ? 'chosen' : '' %>">
        <%= link_to competence.localized_name, studyplan_competence_path(:id => competence) %>
      </li>
    <% end %>
  </ul>

<% end %>


<div id='competence-list'>
  <h1><%= t('.heading')%></h1>

  <%= render 'boxed_competence_list' %>

</div>
