<% content_for(:stylesheets) do %>
  <%= stylesheet_link_tag "views/plans/courses/index", :media => 'all' %>
<% end %>


<% content_for(:javascripts) do %>
  <%= javascript_include_tag "views/plans/courses/index", :media => 'all' %>
<% end %>


<h1><%=t('.heading')%></h1>

<% if @competences.empty? %>
  <p><%= link_to t(:my_courses_no_profile_hint), studyplan_profiles_path %></p>
<% end %>

<div class="search-query">
  <input class="input-large search-query" type="text" data-bind="value: inquery, valueUpdate: 'keyup'" />
</div>

<div class="search-results-container" data-courses-path="<%= search_courses_curriculum_path(@study_plan.curriculum_id) %>">

  <!-- ko ifnot: results -->
    <p><%= t('.no_results') %></p>
  <!-- /ko -->
  <!-- ko foreach: results -->
    <div class="result">
      <div class="name" data-bind="text: name"></div>
    </div>
  <!-- /ko -->

</div>

