<h1><%=t :selected_profiles_heading %></h1>

<% if @selected_profiles.empty? %>
  <p><%=t :profile_instructions %></p>
<% else %>
  <table>
  
    <% @selected_profiles.each do |profile| %>
      <tr>
        <td><%= link_to h(profile.name(I18n.locale)), studyplan_profile_url(:id => profile.id) %></td>
        <td><%= link_to image_tag('remove.png', :alt => t(:profe_remove_from_plan)), delete_studyplan_profile_path(:id => profile.id), :title => t(:profe_remove_from_plan) %></td>
      </tr>
    <% end %>
  
  </table>
<% end %>


<h1><%=t :available_profiles_heading %></h1>

<table>
  <% @profiles.each do |profile| %>
    <tr>
      <td><%= link_to h(profile.name(I18n.locale)), studyplan_profile_url(:id => profile.id) %></td>
      <td><%= link_to image_tag('add.png', :alt => t(:profe_add_to_plan)), new_studyplan_profile_path(:id => profile.id), :title => t(:profe_add_to_plan) %></td>
    </tr>
  <% end %>
</table>
