<h1><%=t :selected_profiles_heading %></h1>

<% if @selected_profiles.empty? %>
  <p><%=t :profile_instructions %></p>
<% else %>
  <table>
  
    <% @selected_profiles.each do |profile| %>
      <tr>
        <td><%= link_to h(profile.name(I18n.locale)), studyplan_profile_url(:id => profile.id) %></td>
        <td><%= link_to image_tag('remove.png', :alt => t(:profe_remove_from_plan)), delete_studyplan_profile_path(:id => profile.id), :title => t(:profe_remove_from_plan) %></td>
      </tr>
    <% end %>
  
  </table>
<% end %>


<h1><%=t :available_profiles_heading %></h1>

<table class="competence-selector">
  <% @profiles.each do |profile| %>
    <tr class="profile">
      <td class="profile-name"><%= link_to h(profile.name(I18n.locale)), studyplan_profile_url(:id => profile.id) %></td>
      <td class="profile-description"><%= profile.description(I18n.locale) %></td>
      <td class="profile-credits"></td>
    </tr>
  
    <% profile.competences.each do |competence| %>
      <tr class="competence">
        <td class="competence-name"><%= competence.name(I18n.locale) %></td>
        <td class="competence-description"><%= competence.description(I18n.locale) %></td>
        <td class="competence-credits"><%= competence.credits %> <%=t :cr %></td>
      </tr>
    <% end %>
    
    <tr class="spacer">
      <td></td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
</table>


