<!-- Skills provided -->
<h2><%=t :profile_skills %></h2>

<table class="course-graph">
  <thead>
    <td>Requirements</td>
    <td>Provides</td>
  </thead>

  <tbody>
    <tr>
      <td id="skill-prereqs"></td>
      <td>
        <% @profile.skills.each do |skill| %>
          <p>
            <%= link_to skill.description(I18n.locale), prereqs_skill_url(:id => skill), :remote => true %>
          </p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>


