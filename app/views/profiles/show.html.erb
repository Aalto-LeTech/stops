<h1><%= @profile.name(I18n.locale) %></h1>

<!-- Add to my plan -->
<% if can? :choose @profile %>
  <p><%= link_to t(:profe_add_to_plan), plan_profiles_path(:profile_id => @profile.id), :method => :post %></p>
<% end %>


<!-- Courses required -->
<h2><%=t :profile_strict_prereqs %></h2>

<table class="profile-prereq-matrix">
  <tbody>
    <!-- Prereq courses -->
    <% @profile.strict_prereqs.each do |course| %>
      <tr class="prereq-course-name">
        <!-- Course name -->
        <td class="prereq-course-name"><%= link_to course.course_code + ' ' + course.name(I18n.locale), profile_course_url(:profile_id => @profile, :id => course) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

