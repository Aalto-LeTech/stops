<% if defined?(SHIB_PATH) %>
  <div class="sessions-login-method shibboleth-login">
    <p class="hint"><%=t :sessions_shibboleth_hint %></p>

    <%= link_to t(:shibboleth_button), SHIB_PATH + shibboleth_session_url(:protocol => 'https') %>
  </div>
<% end %>

<p class="hint"><%=t :sessions_traditional_hint %></p>

<%= form_for @user_session, :as => :user_session, :url => session_path, 
  :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :studentnumber, t(:sessions_studentnumber_label), 
      :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :studentnumber, :size => 12, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, t(:sessions_password_label), :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :size => 12 %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.label :remember_me, :class => "checkbox" do %>
        <%= f.check_box :remember_me %> 
        <%= t(:sessions_remember_label) %>
      <% end %>
      <%= f.submit t(:sessions_login_button), :class => 'btn' %>
    </div>
  </div>

  
<% end %>

<p><%= link_to t(:sessions_register), new_user_path %></p>
