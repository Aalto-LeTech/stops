<% form_tag session_path do -%>
  <table>
    <tr>
      <td><%= label_tag 'login', t(:login_username) %></td>
      <td><%= text_field_tag 'login', @login %></td>
    </tr>
    <tr>
      <td><%= label_tag 'password', t(:login_password) %></td>
      <td><%= password_field_tag 'password', nil %></td>
    </tr>
  </table>
  
  <p>
    <%= label_tag 'remember_me', t(:remember_me) %>
    <%= check_box_tag 'remember_me', '1', @remember_me %>
  </p>

  <p><%= submit_tag t(:login_button) %></p>
<% end -%>
