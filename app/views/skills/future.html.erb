<h1><%= @skill.scoped_course.name(I18n.locale) %> - <% @skill.description(I18n.locale) %><br /> is a prerequisite to the following courses</h1>

<% @skill.prereq_to.each do |skill| %>
  <% if skill.scoped_course %>
  
    <p class="course">
      <%= link_to h(skill.scoped_course.code) + ' ' + h(skill.scoped_course.name(I18n.locale)), course_url(:id => skill.scoped_course) %>:
      <%= skill.description(I18n.locale) %>
    </p>
  <% else %>
    <p class="profile">
      <%= skill.description(I18n.locale) %>
    </p>
  <% end %>
<% end %>