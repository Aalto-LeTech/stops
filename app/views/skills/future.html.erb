<% @future_competences.each do |competence, skill_prereqs| %>
  <div class="competence">
    <%= competence.profile.name(I18n.locale) %> <%= competence.name(I18n.locale) %>
    
    <% skill_prereqs.each do |skill_prereq| %>
      <div class="skill <%= skill_prereq.requirement == STRICT_PREREQ ? 'strict' : 'supporting' %>">
        <%= skill_prereq.skill.description(I18n.locale) %>
      </div>
    <% end %>
  </div>
<% end %>

<% @future_courses.each do |scoped_course, skill_prereqs| %>
  <div class="course">
    <%= scoped_course.course_code + ' ' + scoped_course.name(I18n.locale) %>
    
    <% skill_prereqs.each do |skill_prereq| %>
      <div class="skill <%= skill_prereq.requirement == STRICT_PREREQ ? 'strict' : 'supporting' %>">
        <%= skill_prereq.skill.description(I18n.locale) %>
      </div>
    <% end %>
  </div>
<% end %>
